<Styles x:Class="SukiUI.SukiTheme"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SimpleTheme />

    <StyleInclude Source="avares://SukiUI/Theme/ComboBoxStyles.xaml" />
